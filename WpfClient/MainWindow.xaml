<Window x:Class="WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="211*"/>
            <RowDefinition Height="223*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="419*"/>
            <ColumnDefinition Width="381*"/>
        </Grid.ColumnDefinitions>
        <Button FontSize="30" Content="Send" Click="Button_Click" Grid.Column="1" Grid.Row="1"/>
        <TextBox FontSize="30" x:Name="txt" VerticalContentAlignment="Center" TextAlignment="Center"  Text="TextBox"  Grid.Column="1"/>
        <ListBox FontSize="30" x:Name="list" Grid.RowSpan="2"/>

    </Grid>
</Window>